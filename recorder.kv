<Label>:
    font_size: 25

<MainGrid>
    cols: 1
    Label:
        text: "Recorder"
        font_size: 35
        size_hint_y: None
        size_hint: (1,0.1)
    GridLayout:
        id: informationGrid
        size_hint_y: None
        size_hint: (1,0.7)
        cols: 2
        Label:
            text: "Here will be something"
    GridLayout:
        cols: 2
        size_hint: (1,0.2)
        Button:
            id: startButton
            text: "Start"
            background_color: (0,1,0,1)
            on_press: root.startRecording()
        Button:
            text: "Settings"
            on_press: root.stop()